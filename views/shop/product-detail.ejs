<%- include('../includes/head.ejs') %>
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />
<!-- Core theme CSS (includes Bootstrap)-->
<link href="../css/styles.css" rel="stylesheet" />

    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        <main class="centered">
            

            <section class="py-5">
                <div class="container px-4 px-lg-5 my-5">
                    <div class="row gx-4 gx-lg-5 align-items-center">
                        <div class="col-md-6"><img class="card-img-top mb-5 mb-md-0" src="/<%= product.imageUrl %>" alt="<%= product.title %>" /></div>
                        <div class="col-md-6">
                            <div class="small mb-1"><%= product.breed %></div>
                            <h1 class="display-5 fw-bolder"><%= product.title %></h1>
                            <div>
                                <% const bday = new Date(product.birthday) %>
                                <% const tday = Date.now() %>
                                <% const tmday = new Date() %>
                                <% const month_diff = tday - bday.getTime() %>
                                <% const age_dt = new Date(month_diff) %>
                                <% const year = age_dt.getUTCFullYear() %>
                                <% const age = Math.abs(year - 1970) %>
                                <% if (age == 0) { %>
                                <% const ageMonth = Math.abs(tmday.getMonth() - bday.getMonth())%>
                                <h1 class="product__breed"><%= ageMonth %> months</h1>
                                <% } else { %>
                                    <h1 class="product__breed"><%= age %> year-old</h1>
                                <% } %>
                            </div>

                            <p class="lead"><%= product.description %></p>
                            <div>
                               <% if (isAuthenticated) { %>
                                    <%- include('../includes/add-to-cart.ejs', {product: product}) %>
                                <% } %>
                            </div>
                            <div><p></p></div>
                            <div class="fs-5 mb-5">
                                <span>Adoption Fee $<%= product.price %></span>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </main>
        <%- include('../includes/end.ejs') %>