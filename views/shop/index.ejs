<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>

    <main>
        <% if (prods.length > 0) { %>
            <div class="grid">
                <% for (let product of prods) { %>
                    <% if (product.adoption == false) { %>
                    <article class="card product-item">
                        <header class="card__header">
                            <h1 class="product__title"><%= product.title %></h1>
                        </header>
                        <div>
                            <h1 class="product__breed"><%= product.breed %></h1>
                        </div>
                        <div>
                            <% const bday = new Date(product.birthday) %>
                            <% const tday = Date.now() %>
                            <% const tmday = new Date() %>
                            <% const month_diff = tday - bday.getTime() %>
                            <% const age_dt = new Date(month_diff) %>
                            <% const year = age_dt.getUTCFullYear() %>
                            <% const age = Math.abs(year - 1970) %>
                            <% if (age == 0) { %>
                            <% const ageMonth = Math.abs(tmday.getMonth() - bday.getMonth())%>
                            <h1 class="product__breed"><%= ageMonth %> months</h1>
                            <% } else { %>
                                <h1 class="product__breed"><%= age %> year-old</h1>
                            <% } %>
                            <h1 class="product__breed"><%= product.gender %></h1>
                        </div>
                        <div class="card__image">
                            <img src="/<%= product.imageUrl %>"
                                alt="<%= product.title %>">
                        </div>
                        <div class="card__content">
                            <p class="product__description"><%= product.description %></p>
                        </div>
                        <div class="card__actions">
                            <a href="/products/<%= product._id %>" class="btn">Details</a>
                            <% if (isAuthenticated) { %>
                                <%- include('../includes/add-to-cart.ejs', {product: product}) %>
                            <% } %>
                        </div>
                    </article>
                    <% } %>
                <% } %>
            </div>
            <%- include('../includes/pagination.ejs', {currentPage: currentPage, nextPage: nextPage, previousPage: previousPage, lastPage: lastPage, hasNextPage: hasNextPage, hasPreviousPage: hasPreviousPage}) %>
        <% } else { %>
            <h1>No Pets Found!</h1>
        <% } %>
    </main>
<%- include('../includes/end.ejs') %>